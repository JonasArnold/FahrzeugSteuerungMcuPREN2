#include "deviation-controller.h"
#include <unity.h>

void setUp(void) {
    // set stuff up here
}

void tearDown(void) {
    // clean stuff up here
}

void test_deviation_controller_inRange(void) {

    for (int i = -2001; i < 2001; i+=100) {
        /* code */
        int16_t steering = DeviationController_CalcSteering(i);
        printf("Deviation=%d, Steering=%d\n", i, steering);
        TEST_ASSERT_INT_WITHIN(10, -i/10, steering);        
    }
}

int main(int argc, char **argv) {
    UNITY_BEGIN();
    RUN_TEST(test_deviation_controller_inRange);
    UNITY_END();

    return 0;
}